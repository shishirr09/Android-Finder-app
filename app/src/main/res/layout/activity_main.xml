<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:columnCount="6"
    android:rowCount="6">


    <ImageButton android:id="@+id/atm"
        android:layout_height="110dp"
        android:layout_width="110dp"
        android:src="@drawable/atm"
        android:layout_margin="10dp"
        android:layout_row="0"
        android:layout_column="0"
        android:background="#FF59D1AB"  />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/atm_name"
        android:layout_marginLeft="35dp"
        android:gravity="center_vertical"
        android:text="ATM"
        android:textSize="15dp"
        android:layout_row="1"
        android:layout_column="0"
        />

    <ImageButton
        android:id="@+id/gas_station"
        android:layout_height="110dp"
        android:layout_width="110dp"
        android:src="@drawable/gas_station"
        android:layout_margin="10dp"
        android:layout_row="0"
        android:layout_column="1"
        android:background="#FF59D1AB" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gas_name"
        android:text="GAS"
        android:layout_marginLeft="40dp"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:layout_row="1"
        android:layout_column="1"/>

    <ImageButton
        android:id="@+id/hospital"
        android:layout_height="110dp"
        android:layout_width="110dp"
        android:src="@drawable/hospital"
        android:layout_margin="10dp"
        android:layout_row="0"
        android:layout_column="2"
        android:background="#FF59D1AB"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hospital_name"
        android:text="HOSPITAL"
        android:layout_marginLeft="35dp"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:layout_row="1"
        android:layout_column="2"/>

    <ImageButton
        android:id="@+id/motel"
        android:layout_height="110dp"
        android:layout_width="110dp"
        android:src="@drawable/motel"
        android:layout_margin="10dp"
        android:layout_row="2"
        android:layout_column="0"
        android:background="#FF59D1AB"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/motel_name"
        android:text="MOTEL"
        android:layout_marginLeft="35dp"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:layout_row="3"
        android:layout_column="0"/>

    <ImageButton
        android:id="@+id/nightclub"
        android:layout_height="110dp"
        android:layout_width="110dp"
        android:src="@drawable/night_club"
        android:layout_margin="10dp"
        android:layout_row="2"
        android:layout_column="1"
        android:background="#FF59D1AB"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nightclub_name"
        android:text="NIGHT CLUBS"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:layout_row="3"
        android:layout_column="1"/>


    <ImageButton
        android:id="@+id/pharmacy"
        android:layout_height="110dp"
        android:layout_width="110dp"
        android:layout_margin="10dp"
        android:src="@drawable/pharmacy"
        android:layout_row="2"
        android:layout_column="2"
        android:background="#FF59D1AB"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pharmacy_name"
        android:text="PHARMACY"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:layout_row="3"
        android:layout_column="2"/>

    <ImageButton
        android:id="@+id/restaurant"
        android:layout_height="110dp"
        android:layout_width="110dp"
        android:src="@drawable/restaurant"
        android:layout_margin="10dp"
        android:layout_row="4"
        android:layout_column="0"
        android:background="#FF59D1AB"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restaurant_name"
        android:text="RESTAURANT"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:layout_row="5"
        android:layout_column="0"/>

    <ImageButton
        android:id="@+id/starbucks"
        android:layout_height="110dp"
        android:layout_width="110dp"
        android:src="@drawable/starbucks"
        android:layout_margin="10dp"
        android:layout_row="4"
        android:layout_column="1"
        android:background="#FF59D1AB"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/starbucks_name"
        android:text="STARBUCKS"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:layout_row="5"
        android:layout_column="1"/>

    <ImageButton
        android:id="@+id/SevenEleven"
        android:layout_height="110dp"
        android:layout_width="110dp"
        android:src="@drawable/seven_eleven"
        android:layout_margin="10dp"
        android:layout_row="4"
        android:layout_column="2"
        android:background="#FF59D1AB"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SevenEleven_name"
        android:text="7 ELEVEN"
        android:layout_marginLeft="35dp"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:layout_row="5"
        android:layout_column="2"/>
</GridLayout>